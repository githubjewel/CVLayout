<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.MainActivity">


    <RelativeLayout
        android:id="@+id/firstPart"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameField"
            android:text="Md Rokibul Islam"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phoneField"
            android:text="Phone: +8801676741801"
            android:layout_below="@id/nameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/emailField"
            android:text="Email: jewel@gmail.com"
            android:layout_below="@id/phoneField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/profilePic"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/secondPart"
        android:layout_below="@id/firstPart"
        android:layout_marginTop="10dp"
        android:background="#5C6BC0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/objectiveTag"
            android:text="Career Objective"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/objectField"
            android:layout_below="@id/objectiveTag"
            android:layout_marginTop="8dp"
            android:text="@string/objective"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

   <RelativeLayout
       android:id="@+id/thirdPart"
       android:layout_below="@id/secondPart"
       android:layout_width="match_parent"
       android:layout_marginTop="10dp"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/educationalBackgourndTag"
           android:text="@string/background"
           android:background="@color/colorAccent"
           android:textSize="20sp"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/educationFields"
            android:layout_below="@id/educationalBackgourndTag"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="Exam"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Year"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Group"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Result"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="B.Sc."
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="2016"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="CSE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="3.00"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="HSC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="2010"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Science"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="4.00"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="SSC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="2008"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Science"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="5.00"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

   </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fourthPart"
        android:layout_below="@id/thirdPart"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/personalInfoTag"
            android:text="Additional Personal Infomation"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TableLayout
            android:layout_below="@id/personalInfoTag"
            android:background="@color/colorAccent"
            android:layout_width="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:text="Full Name"/>

                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:text=" : "/>

                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:text="Md Rokibul Islam"/>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:text="Father's Name"/>

                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:text=" : "/>
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:text="Abdul Mannan"/>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:text="Death of Birth"/>

                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:text=" : "/>
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:text="01-01-1994"/>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:text="Blood Group"/>

                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:text=" : "/>
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:text="A+"/>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:text="Religion"/>

                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:text=" : "/>
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:text="Islam"/>

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:text="Nationality"/>

                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:text=" : "/>
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:text="Bangladeshi"/>

            </TableRow>


        </TableLayout>





    </RelativeLayout>


</RelativeLayout>
